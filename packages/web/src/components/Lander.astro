---
import { Image } from 'astro:assets';
import type { Props } from '@astrojs/starlight/props';
import config from "../../config.mjs";

const { data } = Astro.locals.starlightRoute.entry;
const { image } = data.hero || {};

const imageAttrs = {
    loading: 'eager' as const,
    decoding: 'async' as const,
    width: 400,
    alt: image?.alt || '',
};

let darkImage: ImageMetadata | undefined;
let lightImage: ImageMetadata | undefined;
if (image) {
    if ('file' in image) {
        darkImage = image.file;
    } else if ('dark' in image) {
        darkImage = image.dark;
        lightImage = image.light;
    }
}
---
<div class="hero">
    <section class="top">
      <div class="logo">
        <Image
          src={darkImage}
          {...imageAttrs}
          class:list={{ 'light:sl-hidden': Boolean(lightImage) }}
        />
        <Image src={lightImage} {...imageAttrs} class="dark:sl-hidden" />
      </div>
      <p class="tagline">Task-centric development with Claude agents</p>
    </section>

    <section class="cta">
      <a href="/docs/desktop" class="button primary">Download for Mac</a>
      <a href={config.github} class="button secondary" target="_blank" rel="noopener noreferrer">GitHub &rarr;</a>
    </section>

    <section class="demo">
      <div class="placeholder">
        <span>demo video</span>
      </div>
      <p class="caption">task &rarr; agent &rarr; review &rarr; ship</p>
    </section>

    <section class="features">
      <ul>
        <li>ToS-compliant Claude integration</li>
        <li>Full PR lifecycle without leaving the app</li>
        <li>Git worktrees for parallel tasks</li>
        <li>Open source, bring your own keys</li>
      </ul>
    </section>

    <section class="footer">
      <a href={config.twitter} target="_blank" rel="noopener noreferrer">Twitter</a>
      <a href={config.github} target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href={config.discord} target="_blank" rel="noopener noreferrer">Discord</a>
    </section>
</div>

<style>
.hero {
  --padding: 3rem;
  --vertical-padding: 1.5rem;

  margin: 1rem;
  border: 2px solid var(--sl-color-border);
}

@media (max-width: 30rem) {
  .hero {
    --padding: 1rem;
    --vertical-padding: 1rem;
    margin: 0.5rem;
  }
}

section.top {
  padding: var(--padding);
  text-align: center;

  .logo {
    display: flex;
    justify-content: center;
  }

  img {
    height: auto;
    width: clamp(180px, 50vw, 300px);
  }

  .tagline {
    margin-top: 1rem;
    font-size: var(--sl-text-lg);
    color: var(--sl-color-text-dimmed);
  }
}

section.cta {
  display: flex;
  justify-content: center;
  gap: 1rem;
  padding: var(--vertical-padding) var(--padding);
  border-top: 2px solid var(--sl-color-border);

  @media (max-width: 30rem) {
    flex-direction: column;
    align-items: stretch;
  }

  .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    text-align: center;
    text-decoration: none;
    border: 2px solid var(--sl-color-border);
    transition: all 0.15s ease;

    &.primary {
      background: var(--sl-color-text);
      color: var(--sl-color-bg);
      border-color: var(--sl-color-text);

      &:hover {
        opacity: 0.9;
      }
    }

    &.secondary {
      background: transparent;
      color: var(--sl-color-text);

      &:hover {
        background: var(--sl-color-border);
      }
    }
  }
}

section.demo {
  padding: var(--padding);
  border-top: 2px solid var(--sl-color-border);
  text-align: center;

  .placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 300px;
    border: 2px dashed var(--sl-color-border);
    color: var(--sl-color-text-dimmed);
    font-size: var(--sl-text-sm);

    @media (max-width: 30rem) {
      height: 200px;
    }
  }

  .caption {
    margin-top: 1rem;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-text-dimmed);
    letter-spacing: 0.1em;
  }
}

section.features {
  padding: var(--padding);
  border-top: 2px solid var(--sl-color-border);

  ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0;

    li {
      padding: 0.25rem 0;
      color: var(--sl-color-text);
    }

    li + li {
      margin-top: 0.5rem;
    }
  }
}

section.footer {
  display: flex;
  justify-content: center;
  gap: 2rem;
  padding: var(--vertical-padding) var(--padding);
  border-top: 2px solid var(--sl-color-border);

  @media (max-width: 30rem) {
    gap: 1rem;
  }

  a {
    color: var(--sl-color-text-dimmed);
    text-decoration: none;
    text-transform: uppercase;
    font-size: var(--sl-text-sm);

    &:hover {
      color: var(--sl-color-text);
    }
  }
}
</style>

<style is:global>
:root[data-has-hero] {
  header.header {
    display: none;
  }
  .main-frame {
    padding-top: 0;

    .main-pane > main {
      padding: 0;
    }
  }
  main > .content-panel .sl-markdown-content {
    margin-top: 0;
  }
}
</style>
